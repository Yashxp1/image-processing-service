generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images Image[]
  // token    String
}

model Image {
  id        String  @id @default(cuid())
  name      String?
  size      Int?
  image_Url String?
  mimeType  String
  s3Key     String
  isEdited  Boolean?
  user      User?   @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
